{
  "compilerOptions": {
    "target": "es2024",
    "module": "ESNext",
    "alwaysStrict": true,
    "lib": ["ESNext"],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "allowJs": true
  },
  "include": ["**/*.ts", "**/*.js"]
}
